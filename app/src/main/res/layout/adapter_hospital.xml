<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/hospital_adapter_image"
        android:src="@drawable/icon_hospital1"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/hospital_adapter_text1"
        android:text="의료기관명"
        android:textColor="#413139"
        android:textSize="16dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hospital_adapter_image"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/hospital_adapter_text2"
        android:text="서울특별시 여의도 새빛둥둥섬"
        android:textSize="11dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_below="@id/hospital_adapter_text1"
        android:layout_alignLeft="@id/hospital_adapter_text1"/>

    <TextView
        android:gravity="right"
        android:id="@+id/hospital_adapter_text3"
        android:textSize="12dp"
        android:text="042-298-5971"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>